package knowledgeTechnology;

public class Soundex {
	public static String soundex(String s){
		char[] charArray = s.toLowerCase().toCharArray();
		char firstLetter = charArray[0];
		for(int i=1;i<charArray.length;i++){
			switch(charArray[i]){
				case 'a':charArray[i]=0;break;
				case 'e':charArray[i]=0;break;
				case 'h':charArray[i]=0;break;
				case 'i':charArray[i]=0;break;
				case 'o':charArray[i]=0;break;
				case 'u':charArray[i]=0;break;
				case 'w':charArray[i]=0;break;
				case 'y':charArray[i]=0;break;
				case 'b':charArray[i]=1;break;
				case 'f':charArray[i]=1;break;
				case 'p':charArray[i]=1;break;
				case 'v':charArray[i]=1;break;
				case 'c':charArray[i]=2;break;
				case 'g':charArray[i]=2;break;
				case 'j':charArray[i]=2;break;
				case 'k':charArray[i]=2;break;
				case 'q':charArray[i]=2;break;
				case 's':charArray[i]=2;break;
				case 'x':charArray[i]=2;break;
				case 'z':charArray[i]=2;break;
				case 'd':
				case 't':{charArray[i]=3;break;}
				case 'l':{charArray[i]=4;break;}
				case 'm':
				case 'n':{charArray[i]=5;break;}
				case 'r':{charArray[i]=6;break;}
				default:{charArray[i]=7;break;}
			}
			
		}
		String output =""+firstLetter;
		for(int i=1;i<charArray.length;i++){
			System.out.println(charArray[i]);
			if(charArray[i]!=charArray[i-1] && charArray[i]!=0){
				output = output + charArray[i];
			}
		}
		return output;
	}
}
